					<option value="0">MOD_JO_VERTICAL_SLIDESHOWIMAGES_NO</option>
					<option value="1">MOD_JO_VERTICAL_SLIDESHOWIMAGES_YES</option>
				</field>
				<field name="urls" type="textarea" default="" label="MOD_JO_VERTICAL_SLIDESHOWIMAGES_URL_IMAGE" description="MOD_JO_VERTICAL_SLIDESHOWIMAGES_URL_IMAGE_DESC" cols="50" rows="15" /> 
